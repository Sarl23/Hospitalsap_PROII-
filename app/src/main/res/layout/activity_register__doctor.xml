<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register__doctor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azulbase1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jimmy.hospitalsapp.activities.Register_DoctorAct">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/Gris"
        android:gravity="center_vertical|center_horizontal"
        android:text="Registro de Doctor"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/idDoc"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="N° Tarjeta de doctor"
        android:maxLength="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_below="@+id/namedoc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/especView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Especialización"
        android:layout_below="@+id/idDoc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/btnaddDoc"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:entries="@array/SpinnerSpecialization"
        android:layout_below="@+id/especView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/namedoc"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Nombre de Doctor"
        android:maxLength="20"
        android:inputType="textPersonName"
        android:text=""
        android:layout_below="@+id/tvTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp" />

</RelativeLayout>
